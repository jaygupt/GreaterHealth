<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/headTag', {title: 'Add an Experience'}); %>
    <link rel="stylesheet" href="/css/addExperience.css">
  </head>
  <body>
    <%- include('../partials/header'); %>

    <h1>Add Your Health Insurance Experience</h1><br />
    <form action="/addExperience" method="POST">
      <h4>Personal Information</h4>

      <div class="form-group">
        <label for="age">Age</label>
        <input class="form-control" type="number" id="age" name="age" placeholder="0">
      </div>

      <div class="form-group">
        <label for="city">City</label>
        <input class="form-control" type="text" id="city" name="city" placeholder="San Francisco">
      </div>

      <!--
        <% var i = 0; %>
          <% for (var tableRowCount = 0; tableRowCount < 10; tableRowCount++) { %>
            <tr>
              <% for (var tableData = 0; tableData < 5; tableData++) { %>
                
                <td><a href="/states/<%= longStateNames[i]; %>"><%= longStateNames[i]; %></a></td>
                <% i++; %>
              <% } %>
            </tr>
          <% } %>
      -->

      <div class="form-group">
        <label for="state">State</label><br />
        <select name="state" id="state">
          <option value=StateName selected="selected"> StateName</option>
          <option value="" selected="selected">Alaska  </option>
          <option value="" selected="selected">Arizona  </option>
          <option value="" selected="selected">Arkansas  </option>
          <option value="" selected="selected">California  </option>
          <option value="" selected="selected">Colorado  </option>
          <option value="" selected="selected">Connecticut  </option>
          <option value="" selected="selected">Delaware  </option>
          <option value="" selected="selected">Florida  </option>
          <option value="" selected="selected">Georgia  </option>
          <option value="" selected="selected">Hawaii  </option>
          <option value="" selected="selected">Idaho  </option>
          <option value="" selected="selected">Illinois  </option>
          <option value="" selected="selected">Indiana  </option>
          <option value="" selected="selected">Iowa  </option>
          <option value="" selected="selected">Kansas  </option>
          <option value="" selected="selected">Kentucky  </option>
          <option value="" selected="selected">Louisiana  </option>
          <option value="" selected="selected">Maine  </option>
          <option value="" selected="selected">Maryland  </option>
          <option value="" selected="selected">Massachusetts  </option>
          <option value="" selected="selected">Michigan  </option>
          <option value="" selected="selected">Minnesota  </option>
          <option value="" selected="selected">Mississippi  </option>
          <option value="" selected="selected">Missouri  </option>
          <option value="" selected="selected">Montana  </option>
          <option value="" selected="selected">Nebraska  </option>
          <option value="" selected="selected">Nevada  </option>
          <option value="" selected="selected">New Hampshire  </option>
          <option value="" selected="selected">New Jersey  </option>
          <option value="" selected="selected">New Mexico  </option>
          <option value="" selected="selected">New York  </option>
          <option value="" selected="selected">North Carolina  </option>
          <option value="" selected="selected">North Dakota  </option>
          <option value="" selected="selected">Ohio  </option>
          <option value="" selected="selected">Oklahoma  </option>
          <option value="" selected="selected">Oregon  </option>
          <option value="" selected="selected">Pennsylvania  </option>
          <option value="" selected="selected">Rhode Island  </option>
          <option value="" selected="selected">South Carolina  </option>
          <option value="" selected="selected">South Dakota  </option>
          <option value="" selected="selected">Tennessee  </option>
          <option value="" selected="selected">Texas  </option>
          <option value="" selected="selected">Utah  </option>
          <option value="" selected="selected">Vermont  </option>
          <option value="" selected="selected">Virginia  </option>
          <option value="" selected="selected">Washington  </option>
          <option value="" selected="selected">West Virginia  </option>
          <option value="" selected="selected">Wisconsin  </option>
          <option value="" selected="selected">Wyomin  </option>
       </select>
      </div>

      <fieldset class="form-group">
        <label for="hotuos">History of Tobacco Use or Smoking</label>
        <div class="form-check">
          <input class="form-check-input" type="radio" id="yes" name="hotuos" value="Yes">
          <label class="form-check-label" for="yes">Yes</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" id="no" name="hotuos" value="No">
          <label class="form-check-label" for="no">No</label>
        </div>
      </fieldset>

      <div class="form-group">
        <label for="prevSurgeries">Previous Surgeries</label>
        <input class="form-control" type="text" id="prevSurgeries" name="prevSurgeries" placeholder="Meniscus Repair">
      </div>

      <div class="form-group">
        <label for="oopCost">Out of Pocket Cost After Insurance ($)</label>
        <input class="form-control" type="number" id="oopCost" name="oopCost" step=".01" placeholder="$1000">
      </div>

      <h4>Hospital Information</h4>

      <div class="form-group">
        <label for="hospitalName">Name of Hospital</label>
        <input class="form-control" type="text" id="hospitalName" name="hospitalName" placeholder="Kaiser Permanente">
      </div>

      <div class="form-group">
        <label for="hospitalCity">City</label>
        <input class="form-control" type="text" id="hospitalCity" name="hospitalCity" placeholder="Daly City">
      </div>

      <fieldset class="form-group">
        <label for="iooon">In or Out of Network:</label>
        <div class="form-check">
          <input class="form-check-input" type="radio" id="in-network" name="iooon" value="In-Network">
          <label class="form-check-label" for="in-network">In-Network</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" id="out-of-network" name="iooon" value="Out-of-Network">
          <label class="form-check-label" for="out-of-network">Out-of-Network</label>
        </div>
      </fieldset>

      <h4>Insurance Information</h4>

      <div class="form-group">
        <label for="companyName">Name of Company</label>
        <input class="form-control" type="text" id="companyName" name="companyName" placeholder="Blue Shield">
      </div>

      <fieldset class="form-group">
        <label for="iofn">Individual or Family Network:</label>
        <div class="form-check">
          <input class="form-check-input" type="radio" id="individual-network" name="iofn" value="Individual Network">
          <label class="form-check-label" for="individual-network">Individual Network</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" id="family-network" name="iofn" value="Family Network">
          <label class="form-check-label" for="family-network">Family Network</label>
        </div>
      </fieldset>

      <div class="form-group">
        <label for="planCategory">Plan Category</label>
        <input class="form-control" type="text" id="planCategory" name="planCategory" placeholder="Gold">
      </div>

      <div class="form-group">
        <label for="premium">Premium ($)</label>
        <input class="form-control" type="number" id="premium" name="premium" step=".01" placeholder="$200">
      </div>

      <div class="form-group">
        <label for="deductible">Deductible ($)</label>
        <input class="form-control" type="number" id="deductible" name="deductible" step=".01" placeholder="$5000">
      </div>

      <div class="form-group">
        <label for="copay">Copay ($)</label>
        <input class="form-control" type="number" id="copay" name="copay" step=".01" placeholder="$25">
      </div>

      <button class="btn btn-success" type="submit">Submit!</button>
    </form>
    
    <%- include('../partials/footer'); %>
  </body>
</html>